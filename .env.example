# Database (PostgreSQL - User, Shipment, Wallet, Transaction)
# For Render PostgreSQL append: ?sslmode=require&connect_timeout=30
DATABASE_URL="your_database_url_here"

# MongoDB (Merchant module - KYC, booking, shipments)
MONGODB_URI="your_mongodb_uri_here"

# Auth
JWT_SECRET="your_jwt_secret_here"
# For Vercel/production set to your live URL (e.g. https://your-app.vercel.app) - no trailing slash
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your_nextauth_secret_here"
ADMIN_EMAIL="admin@shipco.com"

# Payment (Paystack wallet funding)
PAYSTACK_SECRET_KEY="your_paystack_secret_key_here"

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Email (optional)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS="your_smtp_pass_here"
SMTP_FROM="noreply@shipco-logistics.com"

# Cloudinary (KYC document uploads)
CLOUDINARY_CLOUD_NAME="your_cloud_name_here"
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your_cloud_name_here"
CLOUDINARY_API_KEY="your_key_here"
CLOUDINARY_API_SECRET="your_secret_here"
# Create an unsigned upload preset in Cloudinary Dashboard for KYC folder
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=""

# Optional integrations
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=""
